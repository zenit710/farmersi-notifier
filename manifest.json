{
  "name": "Farmersi Notifier",
  "version": "1.0",
  "description": "Waiting games notifications for farmersi.pl",
  "permissions": [
    "notifications",
    "storage",
    "https://farmersi.pl/*"
  ],
  "background": {
    "scripts": ["dist/js/background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "options_page": "dist/options-page.html",
  "browser_action": {
    "default_popup": "dist/popup-page.html",
    "default_icon": {
      "16": "dist/images/logo-16.png",
      "32": "dist/images/logo-32.png",
      "48": "dist/images/logo-48.png",
      "128": "dist/images/logo-128.png"
    }
  },
  "icons": {
    "16": "dist/images/logo-16.png",
    "32": "dist/images/logo-32.png",
    "48": "dist/images/logo-48.png",
    "128": "dist/images/logo-128.png"
  },
  "manifest_version": 2
}
